SCOPE = 
CLIENT_SECRET = 'json/client_secret.json'

store = file.Storage('storage.json')
credz=store.het()
if not credz or credz.invalid
	flow = client.flow_form_clientsecrets(CLIENT)
	credz = tools.run(flow, store)

